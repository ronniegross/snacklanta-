<%= form_for @restaurant do |f| %>

  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@restaurant.errors.count, "error") %> prohibited
        this restaurant from being saved:
      </h2>
      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<p>
		<%= f.label :name %><br>
		<%=	f.text_field :name %>
	</p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :website %><br>
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :picture %><br>
    <%= f.text_field :picture %>
  </p>
  <p>
    <%= f.label :order %><br>
    <%= f.text_field :order %>
  </p>
	<p>
		<%= f.label :thoughts %> <br>
		<%= f.text_area :thoughts %>
	</p>
  <p>
    <%= f.label :atlanta %> <br>
    <%= f.radio_button :atlanta, true %> In ATL
    <%= f.radio_button :atlanta, false  %> Not in ATL
  </p>

	<p>
		<%= f.submit %>
	</p>
<% end %>